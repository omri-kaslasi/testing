alias k="kubectl"
alias kd="kubectl describe"
alias kg="kubectl get"
alias kgp="kubectl get pods"
alias kgpa="kubectl get pods -A"
alias kgn="kubectl get nodes"
alias kl="kubectl logs"
alias kgd="kubectl get deployments"
alias kgpc="kubectl get pods | grep 'coredns'"
alias kdc="kubectl describe configmap"
alias kgc="kubectl get configmap"
alias kec="kubectl edit configmap"
alias kip="kubectl get pods -o wide -A | grep"
alias kgs="kubectl get service"
alias kdp="kubectl describe pod "
alias kdd="kubectl describe deployment"
alias kcrash="kubectl get pods -A -o wide | grep CrashLoopBackOff"
alias kgpw="kubectl get pods | grep windmill"
alias kgcw="kubectl get configmap | grep windmill"
alias kerror="kubectl get pods -A | grep Error"
alias kges="kubectl get externalsecrets"
alias kgss="kubectl get secretstore"
alias kapi="kubectl api-resources --verbs=list --namespaced -o name |  xargs -n 1 kubectl get --show-kind --ignore-not-found"
alias kga="kubectl get all"
alias kgpd="kubectl get pods | grep datadog"
